{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "moduleResolution": "Bundler", // Recommended for Angular 21 + Vite
    "preserveSymlinks": true,      // Helps TS follow pnpm's symlinks
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
