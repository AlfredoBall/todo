# Copy this file to terraform.tfvars and fill in your values
# Find your tenant ID: Azure Portal > Entra ID > Overview > Tenant ID
# Or run: az account show --query tenantId -o tsv

# ===================================
# Azure AD Configuration
# ===================================
tenant_id = "your-tenant-id-here"

# ===================================
# Local Development Redirect URIs
# ===================================
# These are managed by the Aspire AppHost
# Only set these if running Terraform manually
# api_redirect_uri     = "https://localhost:7258/"
# react_redirect_uri   = "https://localhost:5173/"
# angular_redirect_uri = "https://localhost:4200/"

