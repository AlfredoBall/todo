
// IMPORTANT: CI/CD Variable Mapping Guidance
// The following variables MUST match the corresponding GitHub Actions secrets used in deploy.yml:
//   - api_app_service_name         <-> API_APP_SERVICE_NAME
//   - react_static_web_app_name    <-> REACT_STATIC_WEB_APP_NAME
//   - angular_static_web_app_name  <-> ANGULAR_STATIC_WEB_APP_NAME
// These names must be consistent between your Terraform configuration and your GitHub Actions secrets for successful deployment.

// Example Terraform variable values (copy to `terraform.tfvars` and edit)
// Replace the placeholders below with values for your environment.
// DO NOT commit secrets or environment-specific values to source control.

// Azure infrastructure settings
location            = "<YOUR_AZURE_REGION>"        # e.g. centralus, eastus
resource_group_name = "<YOUR_RESOURCE_GROUP>"      # e.g. rg-todo
tenant_id           = "<YOUR_TENANT_ID>"           # Entra ID tenant GUID
subscription_id     = "<YOUR_SUBSCRIPTION_ID>"     # Azure subscription GUID

// Terraform backend configuration (for remote state in Azure Storage)
tf_storage_account_name = "<YOUR_STORAGE_ACCOUNT>" # Storage account for tfstate (must be globally unique)
tf_container_name       = "<YOUR_CONTAINER_NAME>"  # e.g. tfstate
tf_state_key            = "<YOUR_STATE_KEY>"       # e.g. todo.terraform.tfstate

// Azure AD App Registration names (optional - defaults will be used if not specified)
// api_app_registration_name     = "To Do API"
// angular_app_registration_name = "To Do Angular"
// react_app_registration_name   = "To Do React"

// GitHub OIDC Configuration (for production CI/CD)
// These variables configure GitHub Actions to authenticate to Azure without client secrets
github_repo_owner      = "<YOUR_GITHUB_USERNAME_OR_ORG>"  # e.g. AlfredoBall
github_repo_name       = "<YOUR_REPO_NAME>"                # e.g. todo
github_branch          = "main"                            # Branch allowed to deploy
github_environment_name = "production"                      # GitHub environment name

// Azure Static Web App and App Service names (required - must match GitHub Actions workflow)
// These MUST match the corresponding GitHub Actions secrets in deploy.yml
api_app_service_name         = "<YOUR_API_APP_SERVICE_NAME>"         # e.g. todo-api-prod
react_static_web_app_name    = "<YOUR_REACT_STATIC_WEB_APP_NAME>"    # e.g. todo-react-prod
angular_static_web_app_name  = "<YOUR_ANGULAR_STATIC_WEB_APP_NAME>"  # e.g. todo-angular-prod
api_service_plan_name        = "<YOUR_API_SERVICE_PLAN_NAME>"        # e.g. todo-api-plan-prod

// Resource tags (optional - defaults will be used if not specified)
// resource_tags = {
//   project     = "todo"
//   environment = "dev"
//   owner       = "your-team"
// }
